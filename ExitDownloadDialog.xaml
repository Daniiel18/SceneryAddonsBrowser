<Window x:Class="SceneryAddonsBrowser.ExitDownloadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="460"
        Height="240"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#FF1E1E1E"
            BorderBrush="#FF3A3A3A"
            BorderThickness="1"
            CornerRadius="32"
            Padding="24">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TITLE -->
            <TextBlock Grid.Row="0"
                       Text="Download in progress"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,6"/>

            <!-- DESCRIPTION -->
            <TextBlock Grid.Row="1"
                       TextWrapping="Wrap"
                       Foreground="#FFB0B0B0">
                A scenery download is currently running.
                If you close the application now, you can resume the download later
                or cancel it completely.
            </TextBlock>

            <!-- ACTIONS -->
            <Grid Grid.Row="2"
                  Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CONTINUE -->
                <Button Grid.Column="0"
                        Content="Continue download"
                        Height="38"
                        Margin="0,0,8,0"
                        Click="Continue_Click"/>

                <!-- EXIT & RESUME -->
                <Button Grid.Column="1"
                        Content="Exit &amp; resume later"
                        Height="38"
                        Margin="4,0"
                        Click="ExitResume_Click"/>

                <!-- CANCEL -->
                <Button Grid.Column="2"
                        Content="Cancel &amp; exit"
                        Height="38"
                        Margin="8,0,0,0"
                        Background="#FF3A1F1F"
                        BorderBrush="#FF7A2E2E"
                        Click="CancelExit_Click"/>
            </Grid>

        </Grid>
    </Border>
</Window>
