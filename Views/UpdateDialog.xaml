<Window x:Class="SceneryAddonsBrowser.Views.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available"
        Width="420"
        Height="320"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#FF1E1E1E"
            BorderBrush="#FF3A3A3A"
            BorderThickness="1"
            CornerRadius="12"
            Padding="16">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock x:Name="TitleText"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <TextBlock x:Name="SubtitleText"
                           FontSize="12"
                           Foreground="#FFB0B0B0"/>
            </StackPanel>
            
            <TextBlock Text="What's new"
           FontWeight="SemiBold"
           Foreground="White"
           Margin="0,0,0,6"/>
            <!-- CHANGELOG -->
            <Border Grid.Row="1"
                    Background="#FF252525"
                    BorderBrush="#FF3A3A3A"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ChangelogList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="• {Binding}"
                                           Foreground="#FFD0D0D0"
                                           TextWrapping="Wrap"
                                           Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </Border>

            <!-- ACTIONS -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button Content="Update"
                        Width="90"
                        Click="Update_Click"/>

                <Button Content="Later"
                        Width="90"
                        Margin="0,0,8,0"
                        Click="NotNow_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
