<Window x:Class="SceneryAddonsBrowser.Views.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available"
        Width="480"
        Height="360"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- Overlay -->
    <Grid>
        <Border Background="#FF1E1E1E"
                BorderBrush="#FF3A3A3A"
                BorderThickness="1"
                CornerRadius="14"
                Padding="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel Grid.Row="0" Margin="0,0,0,14">
                    <TextBlock Text="Update available"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <TextBlock x:Name="VersionText"
                               FontSize="12"
                               Margin="0,4,0,0"
                               Foreground="#FFB0B0B0"/>
                </StackPanel>

                <!-- CHANGELOG -->
                <Border Grid.Row="1"
                        Background="#FF252525"
                        BorderBrush="#FF3A3A3A"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="10">

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ChangelogList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               Foreground="#FFDADADA"
                                               TextWrapping="Wrap"
                                               Margin="0,4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Border>

                <!-- ACTIONS -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,16,0,0">

                    <Button Content="Later"
                            Width="90"
                            Margin="0,0,10,0"
                            Click="NotNow_Click"/>

                    <Button Content="Update"
                            Width="90"
                            Click="Update_Click"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
