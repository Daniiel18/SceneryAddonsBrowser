<Window x:Class="SceneryAddonsBrowser.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Width="420"
        Height="220"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Topmost="True">

    <Border Background="#FF1E1E1E"
            BorderBrush="#FF3A3A3A"
            BorderThickness="1"
            CornerRadius="14"
            Padding="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TITLE -->
            <StackPanel VerticalAlignment="Center">

                <Image Source="Assets/World_map_blank_without_borders.svg.png"
                       Width="210"
                       Height="87"
                       Stretch="Uniform"/>

                <TextBlock Text="Scenery Addons Browser"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <!-- STATUS TEXT -->
                <TextBlock x:Name="StatusText"
                           Text="Initializing..."
                           FontSize="12"
                           Foreground="#FFB0B0B0"
                           Margin="0,6,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- PROGRESS -->
            <ProgressBar x:Name="ProgressBar"
                         Grid.Row="1"
                         Height="6"
                         Margin="0,20,0,0"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Background="#FF1E1E1E"
                         Foreground="#FF4FC3F7"
                         BorderThickness="0"/>
        </Grid>
    </Border>
</Window>
