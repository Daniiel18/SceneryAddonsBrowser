<Window x:Class="SceneryAddonsBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scenery Addons Browser"
        Width="750"
        Height="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- ================= RESOURCES ================= -->
    <Window.Resources>

        <!-- BUTTON -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF2E2E2E"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="B"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="B"
                                        Property="Background"
                                        Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="B"
                                        Property="Background"
                                        Value="#FF1F1F1F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="B"
                                        Property="Background"
                                        Value="#FF1A1A1A"/>
                                <Setter Property="Foreground"
                                        Value="#FF777777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TEXTBOX -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- VS CODE SCROLLBAR -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Opacity="0"
                                                  IsHitTestVisible="False"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Opacity="0"
                                                  IsHitTestVisible="False"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Thumb">
            <Setter Property="Background" Value="#FF3F3F3F"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{TemplateBinding Background}"
                                Margin="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5A5A5A"/>
                </Trigger>
                <Trigger Property="IsDragging" Value="True">
                    <Setter Property="Background" Value="#FF707070"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- ================= ROOT ================= -->
    <Grid>

        <Border Background="#FF1E1E1E"
                BorderBrush="#FF3A3A3A"
                BorderThickness="1"
                CornerRadius="12"
                Padding="14">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Border Grid.Row="0"
                        Background="#FF252525"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,0,0,14"
                        MouseLeftButtonDown="Header_MouseLeftButtonDown">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Scenery Addons Browser v1.0"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="Search and download MSFS sceneries by ICAO"
                                       FontSize="12"
                                       Foreground="#FFB0B0B0"/>
                        </StackPanel>

                        <!-- 🔥 AUTOFOCUS + ENTER -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <TextBox x:Name="IcaoTextBox"
                                     Width="120"
                                     Height="30"
                                     Margin="0,0,10,0"
                                     Loaded="IcaoTextBox_Loaded"
                                     KeyDown="IcaoTextBox_KeyDown"/>

                            <Button Content="Search"
                                    Width="100"
                                    Height="30"
                                    Click="SearchButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- RESULTS -->
                <Border Grid.Row="1"
                        Background="#FF1E1E1E"
                        BorderBrush="#FF3A3A3A"
                        BorderThickness="1"
                        CornerRadius="8">

                    <ListView x:Name="ResultsListView"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,10"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FF252525"
                                        BorderBrush="#FF3A3A3A"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="14">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Icao}"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="#FFD0D0D0"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Developer}"
                                                       FontSize="11"
                                                       Foreground="#FF9A9A9A"/>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="Download"
                                                Width="100"
                                                Height="32"
                                                Margin="12,0,0,0"
                                                VerticalAlignment="Center"
                                                Click="DownloadButton_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                </Border>

                <!-- FOOTER -->
                <!-- ================= STATUS + EXIT ================= -->
                <Grid Grid.Row="2"
      Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>

                        <!-- STATUS TEXT -->
                        <Border Padding="6"
                Background="#FF252525"
                BorderBrush="#FF3A3A3A"
                BorderThickness="1"
                CornerRadius="6" Width="513">

                            <TextBlock x:Name="StatusTextBlock"
                       Text="Ready"
                       FontSize="12"
                       Foreground="#FFB0B0B0"/>
                        </Border>

                        <!-- PROGRESS BAR -->
                        <ProgressBar x:Name="DownloadProgressBar"
                     Height="4"
                     Margin="2,6,2,0"
                     Visibility="Collapsed"
                     IsIndeterminate="True"
                     Background="#FF1E1E1E"
                     Foreground="#FF4FC3F7"/>
                    </StackPanel>

                    <!-- BUTTONS -->
                    <StackPanel Grid.Column="1"
                Orientation="Horizontal"
                Margin="0,0,6,0">

                        <Button Content="History"
                Width="90"
                Margin="0,0,5,0"
                Click="History_Click"/>

                        <Button Content="Exit"
                Width="90"
                Click="Exit_Click"/>
                    </StackPanel>

                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
