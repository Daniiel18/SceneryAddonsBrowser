<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== COLORS ===== -->
    <Color x:Key="BgWindow">#1E1E1E</Color>
    <Color x:Key="BgPanel">#252526</Color>
    <Color x:Key="BgList">#1F1F1F</Color>

    <Color x:Key="BorderColor">#3C3C3C</Color>
    <Color x:Key="AccentColor">#3A96DD</Color>

    <Color x:Key="TextPrimary">#EAEAEA</Color>
    <Color x:Key="TextSecondary">#B0B0B0</Color>

    <!-- ===== BRUSHES ===== -->
    <SolidColorBrush x:Key="WindowBgBrush" Color="{StaticResource BgWindow}" />
    <SolidColorBrush x:Key="PanelBgBrush" Color="{StaticResource BgPanel}" />
    <SolidColorBrush x:Key="ListBgBrush" Color="{StaticResource BgList}" />

    <SolidColorBrush x:Key="BorderBrushColor" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />

    <!-- ===== WINDOW ===== -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBgBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- ===== TEXT ===== -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- ===== BUTTON ===== -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PanelBgBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,5" />
    </Style>

    <!-- ===== TEXTBOX ===== -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource PanelBgBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="6" />
    </Style>

    <!-- ===== LISTVIEW ===== -->
    <Style TargetType="ListView">
        <Setter Property="Background" Value="{StaticResource ListBgBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

</ResourceDictionary>
